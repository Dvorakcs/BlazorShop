@foreach (var item in Produtos)
{
    <div class="col-md-3 mb-2">
        <form class="card" action="/ProdutosDetalhes/@item.Id">
            <img class="img-thumbnail" src="@item.ImagemUrl" />
            <div class="card-body">
                <h1 class="">@item.Nome</h1>

                <button type="submit" class="btn-comprar">Comprar - @item.Preco.ToString("c")</button>
            </div>
        </form>
    </div>
}

@code {

    [Parameter]
    public IEnumerable<ProdutoDto>? Produtos{ get; set; }
}
