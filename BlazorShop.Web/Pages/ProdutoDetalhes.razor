@page "/ProdutosDetalhes/{Id:int}"
@inject IProdutosServices ProdutosServices

@if (Produto is not null)
{
    <h3>Detalhes do produto</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img  class="img-fluid" src="@Produto.ImagemUrl"/>
        </div>

        <div class="col-md-6">
            <h3>@Produto.Nome</h3>
            <p>@Produto.Descricao</p>
            <p class="mb-4">
                <b>
                    @Produto.Preco.ToString("c") &nbsp;(@Produto.Quantidade items)
                </b>
            </p>
            <div>
                <button class="btn btn-success">
                    Incluir no carrinho
                </button>
            </div>
        </div>
    </div>
}
@code {
    [Parameter]
    public int Id{ get; set; }
    public ProdutoDto? Produto { get; set; }
    public string? MensagemErro { get; set; }


    protected override async Task OnInitializedAsync()
    {
        try
        {
            Produto = await ProdutosServices.GetItem(Id);
        }
        catch (Exception)
        {
            
            throw;
        }
    }
}
